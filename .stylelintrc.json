{
  "rules": {
    "block-no-empty": true,
    "color-no-invalid-hex": true,
    "declaration-colon-space-after": "always",
    "indentation": [
      2,
      {
        "except": [
          "value"
        ]
      }
    ],
    "max-empty-lines": 2,
    "unit-whitelist": [
      "px",
      "em",
      "rem",
      "%",
      "s",
      "ms",
      "deg"
    ]
  },
  "root": true,
  "extends": "stylelint-config-standard"
}